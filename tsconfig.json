{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "allowJs": true,
      "rootDir": "./",
      "baseUrl": "./src",
      "outDir": "./dist",
      "paths": {
        "@/*": ["*"],
        "@tests/*": ["tests/*"]
      },
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
    }
}